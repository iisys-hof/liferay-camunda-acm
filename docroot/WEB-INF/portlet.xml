<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>ACMCaseOverview</portlet-name>
		<display-name>ACMCaseOverview</display-name>
        <portlet-class>de.iisys.liferay.portlet.camundaACM.caseOverview.CaseOverviewActions</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/caseOverview/view.jsp</value>
		</init-param>
		<init-param>
		    <name>add-process-action-success-action</name>
		    <value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.caseOverview.Language</resource-bundle>
        <portlet-info>
            <title>ACMCaseOverview</title>
        </portlet-info>
	</portlet>
	
	<portlet>
		<portlet-name>ACMActivities</portlet-name>
		<display-name>ACMActivities</display-name>
        <portlet-class>de.iisys.liferay.portlet.camundaACM.caseActivities.ActivitiesActions</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/caseActivities/view.jsp</value>
		</init-param>
		<init-param>
		    <name>add-process-action-success-action</name>
		    <value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.caseActivities.Language</resource-bundle>
        <portlet-info>
            <title>ACMActivities</title>
        </portlet-info>
	</portlet>
	
	<portlet>
		<portlet-name>ACMStakeholders</portlet-name>
		<display-name>ACMStakeholders</display-name>
        <portlet-class>de.iisys.liferay.portlet.camundaACM.caseStakeholders.StakeholderActions</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/caseStakeholders/view.jsp</value>
		</init-param>
		<init-param>
		    <name>add-process-action-success-action</name>
		    <value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.caseStakeholders.Language</resource-bundle>
        <portlet-info>
            <title>ACMStakeholders</title>
        </portlet-info>
	</portlet>
</portlet-app>